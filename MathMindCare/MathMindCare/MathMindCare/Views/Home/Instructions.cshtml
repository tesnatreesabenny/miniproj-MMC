@using MathMindCare.Models;

@model MathMindCare.Models.Questionnaire
@{
    Questionnaire result = Model;
}


<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Instructions</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
            background-color: #f7f7f7;
        }

        .container {
            max-width: 800px;
            margin: 20px auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: #333;
            text-align: center;
        }

        p {
            color: #666;
            font-size: 18px;
            line-height: 1.6;
            margin-bottom: 20px;
        }

        .button {
            display: block;
            width: 200px;
            margin: 0 auto;
            padding: 10px 20px;
            text-align: center;
            font-size: 18px;
            color: #fff;
            background-color: #007bff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

            .button:hover {
                background-color: #0056b3;
            }
    </style>
</head>
<body style="background-image: url('/img/bglogin1.jpg');background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: 100% 100%;">
    <div class="container">
        <input type="hidden" id="hdnChildID" value="@Model.CHILDID" />
        <h1>Test Instructions</h1>
        <p>Welcome to the test! Before you begin, please read the following instructions carefully:</p>
        <ol>
            <li>Ensure that your child has a quiet and comfortable space to take the test. Minimize distractions and interruptions during the assessment. </li>
            <li>
                Before starting the test, explain to your child that the purpose of the assessment is to understand their mathematical abilities better. Assure them that there are no right or wrong answers and encourage them to do their best.
            </li>
            <li>
                Make sure that the computer or device your child will be using to take the test is in good working condition. Check that the internet connection is stable and that any required software or browser settings are up to date.

            </li>
            <li>Make sure you have any necessary materials, such as pen and paper, ready.</li>
            <li> If your child needs assistance navigating the test interface or understanding the instructions, be available to help. However, try to encourage them to complete the test independently as much as possible.</li>
            <li>Stay calm and positive throughout the testing process. If your child becomes frustrated or anxious, offer reassurance and encouragement to help them stay focused.</li>

        </ol>
        <p>Are you ready to begin?</p>
        <button class="button" onclick="startTest()">Take Test</button>
    </div>

    <script>
        function startTest() {
            // Redirect to the test page
            var CHILDID = document.getElementById('hdnChildID').value;
            window.location.href = "/Home/ChildProblems?ID=0";
        }
    </script>
</body>
</html>
