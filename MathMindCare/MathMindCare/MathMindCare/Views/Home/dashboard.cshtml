        .searchbtn {
            float: right;
            padding: 6px;
            border: none;
            margin-top: 8px;
            margin-right: 16px;
            font-size: 17px;
        }

        .searchtext {
            float: right;
            padding: 6px;
            border: none;
            margin-top: 8px;
            margin-right: 16px;
            font-size: 17px;
        }

       /*  .topnav input[type=text] {
            border: 1px solid #ccc;
        } */

        }
    </style>
    <script src="~/js/addchild.js"></script>

</head>
<body style="background-image: url('/img/bgmaths.jpg');background-repeat: no-repeat;
  background-attachment: fixed;
  background-size: 100% 100%;">
    <div id="container">

        <input type="hidden" id="hdnChildID" value=@Model.CHILDID />
        @* <h2>Dashboard</h2> *@
       @*  <div class="child">
      
            
               
            <div class="row">
                <div class="col-sm-6">

                </div>
                <div class="col-sm-6">

                </div>

            </div>
        </div> *@

        <div>
            <h2>Patient Details & Reports</h2>
        </div>

        <table>
            <tr><th></th><th>Name</th><th>Address</th><th>Phone</th><th>DOB</th><th>Email</th><th></th><th></th></tr>
            @foreach (ChildProfile u in result.childProfileList)
            {
                <tr>
                    @if (@u.VIEWED == "1")
                    {
                        <td></td>
                    }
                    else
                    {
                        <td><img src="~/img/newico.gif" style="width:85px;height:45Px" /></td>
                    }
                    <td>@u.NAME</td>
                    <td>@u.ADDRESS</td>
                    <td>@u.PHNO</td>
                    <td>@u.DOB</td>
                    <td>@u.EMAIL</td>
                    <td><button class="btn1" onclick="ViewResult(@u.CHILDID)" style="background-color:#F5783A">View Result</button></td>
                    <td><button class="btn2" onclick="LoadChat(@u.CHILDID)" style="background-color:#79F681">Message</button></td>
                    
                </tr>
            }

        </table>

    </div>
    



<script>
    function ViewResult(childid) {
        
        window.location.href = '/Home/Result?ID=' + childid;
    }
        function LoadChat(ChildID) {
            window.location.href = '/Home/Messages?ID=' + ChildID;

        }


</script>
</body>

